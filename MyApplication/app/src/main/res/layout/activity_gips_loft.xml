<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomrer.klisterdk.tomrer.Gips.GipsLoft"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="45dp"

        android:orientation="vertical">


            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:textAlignment="center"
                android:textColor="#ffffffff"
                android:text="Loft længde i meter"
                android:textSize="18dp"

            />

            <EditText
                android:id="@+id/loftLængde"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#ffffffff"
                android:textAlignment="center"
                android:hint="Længde af loft."
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="15dp"

                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/gipslofthent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hent mål"
                android:textSize="42dp"
                android:textColor="#ffffffff"
                android:background="@drawable/hentbutton"
                android:textAllCaps="false"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
