<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <!-- //alpha program T Tool (Tømrer Tool) name can change do NOT!!! USE!!! WITHOUT!!!! PERMISSION!! by Christian Frederiksen
     COPYRIGHT by Christian Frederiksen do not share the code or program, do not take pictures/ video of the program or send pictures / video of the program or code-->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="1">
        <include layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_marginTop="25dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1. væg"
                android:textAppearance="?android:attr/textAppearanceLarge"
                 />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kantplade"
                android:textAppearance="?android:attr/textAppearanceLarge"

                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:src="@drawable/t2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/t2"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:gravity="center"
                 />
            <ImageView
                android:src="@drawable/t1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:id="@+id/t1"
                android:layout_weight="0.5"
                 />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/kantplade2"
                android:layout_weight="0.5" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/kantplade1"

                android:layout_weight="0.5" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="2. væg"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/wall1i"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kantplade"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/kanttext"
                android:layout_weight="1" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">
            <ImageView
                android:src="@drawable/tt2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tt2"
                android:layout_weight="0.5"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:gravity="center"
                 />
            <ImageView
                android:src="@drawable/tt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tt1"
                android:gravity="center"
                android:scaleType="fitXY"
                android:adjustViewBounds="true"
                android:layout_weight="0.5"

                android:layout_gravity="center" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@android:color/holo_blue_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/kantplade2v2"
                android:layout_weight="0.5"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:background="@android:color/holo_red_dark"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/kantplade1v2"

                android:layout_weight="0.5" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center">
        <Button
            android:id="@+id/mestermaterialer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/getbutton"
            android:layout_weight="0.5"
            android:text="Hent materialeliste"
            android:textSize="18dp"
            android:textAllCaps="false"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"

            />
        </LinearLayout>
    </LinearLayout>
</ScrollView>