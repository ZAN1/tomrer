<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tomrer.klisterdk.tomrer.TagSten.TagStenSidevejs"
    android:weightSum="100"
    android:gravity="center"
    android:orientation="vertical"
    >
    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical">

    <TextView

        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:text="Sten max bredde i meter"
        android:textAlignment="center"
        android:textSize="27dp" />

    <EditText
        android:textColor="#ffffff"
        android:id="@+id/max"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="eks. 30.0 cm  "
        android:inputType="numberDecimal"
        android:background="#666666"
        android:textAlignment="textEnd"
        android:textSize="25dp"/>



    <TextView
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:text="Sten min bredde i meter"
        android:textAlignment="center"
        android:textSize="27dp"/>
    <EditText
        android:textColor="#ffffff"
        android:id="@+id/min"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#666666"
        android:textAlignment="textEnd"
        android:hint="eks. 28.9 cm  "

        android:textSize="25dp"/>
    <TextView
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:text="Afstand mellem start/slutsten"
        android:textAlignment="center"
        android:textSize="27dp"/>
    <EditText
        android:textColor="#ffffff"
        android:id="@+id/afstand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#666666"
        android:textAlignment="textEnd"
        android:hint="eks. 25.774 m  "

        android:textSize="25dp"/>
    <TextView
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:text="Antal sten pr kontrolmål"
        android:textAlignment="center"
        android:textSize="27dp"/>
    <EditText
        android:textColor="#ffffff"
        android:id="@+id/kontrolmaal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:background="#666666"
        android:textAlignment="textEnd"
        android:hint="eks. Pr 3. sten  "

        android:textSize="25dp"/>

    <Button
        android:textColor="#ffffff"
        android:id="@+id/hentmaal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textAlignment="center"
        android:padding="4dp"
        android:textAllCaps="false"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/hentbutton"
        android:textSize="27dp"
        android:text="Hent mål"/>

    <TextView
        android:textColor="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="Denne funktion er ikke færdig.
Alle mål er i Meter.
Der er ikke lavet løsning endnu hvis du kommer under min. mål på sten.
Rettelser og løsning er på vej"
        android:textSize="27dp"
        android:textAlignment="textStart"/>


</LinearLayout>
    </ScrollView>
</LinearLayout>






